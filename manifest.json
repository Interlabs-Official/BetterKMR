{
  "manifest_version": 3,
  "name": "BetterKMR",
  "version": "1.0.0",
  "description": "The ultimate revamp of KAMAR for the web",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.school.kiwi/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.school.kiwi/*"],
      "css": ["modify.css"],
      "js": ["frameworks/js-yaml.min.js", "content.js"]
    }
  ],
  "action": {},
  "background": {
    "service_worker": "service.js"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "settings/index.html",
        "icon/*",
        "details/classLists/*",
        "frameworks/*",
        "src/config/*",
        "src/themes/*",
        "src/modules/*",
        "assets/images/backgrounds/*"
      ],
      "matches": ["https://*.school.kiwi/*"]
    }
  ]
}