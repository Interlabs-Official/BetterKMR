{
  "manifest_version": 3,
  "name": "BetterKMR",
  "version": "1.0.0",
  "description": "The ultimate revamp of KAMAR for the web",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.school.kiwi/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.school.kiwi/*"],
      "css": ["modify.css"],
      "js": ["frameworks/js-yaml.min.js", "content.js"]
    }
  ],
  "action": {},
  "background": {
    "service_worker": "service.js"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "settings/index.html",
        "icon/icon_transparent_48.png",
        "icon/Star-Wars-Space-Background-HD.png",
        "details/classLists/school01.yml",
        "icon/btrkmr_transparent_logo.png",
        "frameworks/js-yaml.min.js",
        "src/config/scripts.yml",
        "settings/editor.html",
        "src/config/themes.yml",
        "src/themes/space.css",
        "src/themes/vivid.css",
        "src/themes/blank.css",
        "src/themes/starwarsempire.css",
        "settings/editor.js",
        "src/modules/navbar.js",
        "src/modules/attendance-streak.js",
        "src/modules/upcoming-holiday-bar.js",
        "src/modules/settings.js",
        "src/modules/footer.js",
        "src/modules/info-tips.js",
        "src/modules/logintitle.js",
        "src/modules/themes.js"
      ],
      "matches": ["https://*.school.kiwi/*"]
    }
  ]
}
