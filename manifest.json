{
  "manifest_version": 3,
  "name": "BetterKMR",
  "version": "1.2.0",
  "description": "The ultimate revamp of KAMAR for the web",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.school.kiwi/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.school.kiwi/*"],
      "css": ["styles.css", "modify.css"],
      "js": ["content.js", "logintitle.js"]
    }
  ],
  "action": {},
  "background": {
    "service_worker": "service.js"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "settings/index.html",
        "icon/icon_transparent_48.png",
        "details/classInfo.json",
        "icon/btrkmr_transparent_logo.png",
        "src/modules/navbar.js",
        "src/modules/attendance-streak.js",
        "src/modules/upcoming-holiday-bar.js",
        "src/modules/settings.js",
        "src/modules/footer.js",
        "src/modules/info-tips.js"
      ],
      "matches": ["https://*.school.kiwi/*"]
    }
  ]
}
