{
  "manifest_version": 3,
  "name": "BetterKMR",
  "version": "1.1",
  "description": "The ultimate revamp of KAMAR for the web",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://whanganuihigh.school.kiwi/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://whanganuihigh.school.kiwi/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "main-box.html"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["main-box.html", "icon/icon_transparent_48.png"],
      "matches": ["https://whanganuihigh.school.kiwi/*"]
    }
  ]
}
